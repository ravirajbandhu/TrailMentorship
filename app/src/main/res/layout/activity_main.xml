<?xml version="1.0" encoding="utf-8"?>


<!--welcome Page-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="16dp"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="122dp"
        android:layout_height="129dp"
        android:src="@drawable/ic_login"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"/>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:text="Welcome to MentorShip"
        android:textSize="30sp"
        android:textColor="@color/blackcolor"
        android:layout_gravity="center"
        android:textStyle="bold"
        tools:ignore="InvalidId" />

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="358dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/mentor_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_width="117dp"
                android:layout_height="114dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_mentor" />

            <TextView
                android:id="@+id/mento_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="120dp"
                android:text="Mentor"
                android:textColor="@color/blackcolor"
                android:textSize="25sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/mentee_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp"
            android:onClick="mentee"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_width="117dp"
                android:layout_height="114dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_mentee" />


            <TextView
                android:id="@+id/mentee_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="55dp"
                android:text="Mentee"
                android:textColor="@color/blackcolor"
                android:textSize="25sp" />

        </android.support.v7.widget.CardView>




</LinearLayout>